acl "<%= publicview %>" {localnets;localhost;};

view "<&= publicview %>" {
//GUID=F70FE300-D06D-4A88-8D3E-F03A1CEB14EC;

	allow-recursion {"com.apple.ServerAdmin.DNS.public";};

	zone "." IN  {
		type hint;
		file "named.ca";
	 };

	zone "localhost" IN  {
		type master;
		file "localhost.zone";
		allow-update  { none;  };
	 };

	zone "0.0.127.in-addr.arpa" IN  {
		type master;
		file "named.local";
		allow-update  { none;  };
	 };

